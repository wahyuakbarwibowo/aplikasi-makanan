<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="3pt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/background_makanan"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivGambarMakanan"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:contentDescription="@string/tentangmakanan"
            android:src="@drawable/bakso"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvNamaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bakso"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>